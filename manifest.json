{
  "name": "Gmail Utils",
  "description": "All the utils you need for Gmail in one extension",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": ["https://*/*", "http://*/*"]
}
